<style>
.sidebar-link.active {
  background-color: #222 !important;
  color: #fff !important;
  font-weight: bold;
  border-left: 4px solid rgb(var(--accent,136,58,234));
}
</style>
<script is:inline>
  function Scroll(location) {
    const section = document.getElementById(location);
    if (!section) return;
    section.scrollIntoView({ behavior: "smooth", block: "start" });
  }

  // Scroll spy logic
  document.addEventListener('DOMContentLoaded', function() {
    const sectionIds = [
      'Overview','DesignSystem','PseudoClasses','CustomClasses','Install','Usage','DesignSystemMappings','ExampleSnapping','MediaBreakPoints','Configuration','ColorPalette','OverridingDefaults','LitIntegration'
    ];
    const navLinks = Array.from(document.querySelectorAll('.sidebar-link'));
    const sections = sectionIds.map(id => document.getElementById(id));
    function onScroll() {
      let activeIdx = 0;
      for (let i = 0; i < sections.length; i++) {
        const rect = sections[i].getBoundingClientRect();
        if (rect.top <= 80) activeIdx = i;
      }
      navLinks.forEach((link, idx) => {
        if (idx === activeIdx) link.classList.add('active');
        else link.classList.remove('active');
      });
    }
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  });
</script>

